{
  "expo": {
    "name": "Botermi",
    "slug": "Botermi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#b60017"
    },
    "androidStatusBar": {
      "backgroundColor": "#000000"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash-icon-dark.png",
          "imageWidth": 190,
          "backgroundColor": "#b60017",
          "resizeMode": "cover",
          "dark": {
            "image": "./assets/splash-icon-light.png",
            "backgroundColor": "#b60017"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Botermi to use your location."
        }
      ]
    ],
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.botermi.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes."
      },
      "config": {
        "googleMapsApiKey": "YOUR_IOS_API_KEY"
      },
      "icon": {
        "dark": "./assets/ios-dark.png",
        "light": "./assets/ios-light.png",
        "tinted": "./assets/ios-tinted.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "monochromeImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#B3071A"
      },
      "package": "com.botermi.app",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_API_KEY"
        }
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECEIVE_SMS",
        "android.permission.READ_SMS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "48d4fc13-aaed-45ed-8833-f2e8f7522a6c"
      }
    }
  }
}
